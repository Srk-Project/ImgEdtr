<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp">
    <ImageView
        android:id="@+id/img_features"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/baseline_save_as_24"
        app:tint="@color/primary"
        />
    <TextView
        android:id="@+id/txt_features"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/img_features"
        app:layout_constraintStart_toStartOf="@id/img_features"
        app:layout_constraintEnd_toEndOf="@id/img_features"/>



</androidx.constraintlayout.widget.ConstraintLayout>